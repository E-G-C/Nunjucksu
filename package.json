{
  "name": "nunjucksu",
  "displayName": "Nunjucksu",
  "description": "Render Nunjucks templates from .njk.yaml config",
  "version": "0.0.1",
  "publisher": "E-G-C",
  "author": {
    "name": "Enrique Gonzalez"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/E-G-C/Nunjucksu.git"
  },
  "bugs": {
    "url": "https://github.com/E-G-C/Nunjucksu/issues"
  },
  "homepage": "https://github.com/E-G-C/Nunjucksu#readme",
  "keywords": [
    "nunjucks",
    "jinja2",
    "template",
    "templating",
    "yaml",
    "generator",
    "code generation",
    "markdown",
    "njk"
  ],
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.vscode/*.njk.yaml",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nunjucksu.renderAll",
        "title": "Render Nunjucks Templates"
      }
    ],
    "configuration": {
      "title": "Nunjucksu",
      "properties": {
        "nunjucksu.logLevel": {
          "type": "string",
          "default": "normal",
          "enum": ["silent", "normal", "verbose"],
          "enumDescriptions": [
            "Only show errors and warnings",
            "Show render completions and errors",
            "Show all operations including config reloads"
          ],
          "description": "Controls output channel verbosity"
        },
        "nunjucksu.templateExtension": {
          "type": "string",
          "default": ".njk",
          "description": "File extension for Nunjucks templates (e.g., .njk, .nunjucks)"
        },
        "nunjucksu.additionalSearchPaths": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional directories to search for templates (for {% include %} and {% extends %})"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/nunjucks": "^3.2.6",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "nunjucks": "^3.2.4",
    "yaml": "^2.8.1"
  }
}
